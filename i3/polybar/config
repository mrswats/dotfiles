label-connected =  %essid%
label-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

;==========================================================

[module/eth]
type = internal/network
interface = virbr0-nic
interval = 0.5

