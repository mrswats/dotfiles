[bar/fjovell]
monitor = ${env:MONITOR}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.primary}

border-size = 0

padding-left = 1
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Fira Code Retina:size=10;1"
font-1 = "FontAwesome:size10;1"

modules-left = i3
modules-center = date
modules-right = docker cpu temperature memory colortemp eth eth2 wlan bluetooth pulseaudio xkeyboard battery

tray-position = none

wm-name = i3

;==========================================================

[module/colortemp]
type = custom/script
exec = redshift -p 2>&1 | grep -oP "temperature: \K.*$"
interval = 60
label =  %output%

;==========================================================

[module/bluetooth]
type = custom/script

exec = bluetoothctl info | grep -oP "Alias: \K.*" || echo "disc."
click-right = blueman-manager &
tail = true

label = %output%


format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

;==========================================================

[module/docker]
type = custom/script
exec = docker ps -q | wc -l
interval = 5
label = "DKS: %output%"


;==========================================================

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground}

label-layout = %layout%

;==========================================================

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-background = ${colors.background}
label-mode-foreground = ${colors.secondary}
label-mode-padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%: %icon%
label-focused-foreground = ${colors.secondary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

;==========================================================

[module/cpu]
type = internal/cpu
interval = 2

format-prefix = " "
format-prefix-foreground = ${colors.foreground}

label = %percentage-sum:2%%

;==========================================================

[module/temperature]
type = internal/temperature
interval = 5
thermal-zone = 9
base-temperature = 30
warn-temperature = 75
label = "@ %temperature-c%"
label-warn-foreground = ${colors.alert}

;==========================================================

[module/memory]
type = internal/memory
interval = 2
label = " %percentage_used%%"

;==========================================================

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 1

format-connected = <label-connected>

label-connected = " %essid%"

label-disconnected = " off"
label-disconnected-foreground = ${colors.off}

;==========================================================

[module/eth]
type = internal/network
interface = ens4u1u2
interval = 1

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = ""
label-disconnected = "  off"
label-disconnected-foreground = ${colors.off}

;==========================================================

[module/eth2]
type = internal/network
interface = enp0s31f6
interval = 1

format-connected = <label-connected>

label-connected = ""

;==========================================================

[module/date]
type = internal/date
interval = 5

date = %A %d %b
time = %H:%M

format-prefix-foreground = ${colors.foreground}

label =  %date% -  %time%

;==========================================================

[module/pulseaudio]
type = internal/pulseaudio
