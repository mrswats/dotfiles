# Zsh config
alias zshconfig="$EDITOR ~/.zshrc"

# Terminal stuff
alias sudo='sudo '
alias sv='sudo nvim'
alias ls='ls --color=auto'
alias ll='ls -lsF'
alias hydra-ssh='ssh -CXY fjovell@hydra.uab.es -p 22'
alias calc='python -i -c "from math import *"'
alias rainbow='yes "$(seq 231 -1 16)" | while read i; do printf "\x1b[48;5;${i}m\n"; sleep .02; done'

# Development Aliases
alias v='nvim'
alias p='ipython'
alias gpip='PIP_REQUIRE_VIRTUALENV="" sudo pip'
alias cleanpycache='find . -name '__pycache__' -exec rm -r {} \;'

# Git aliases
alias ggrep='git grep -n'
alias diff='diff --color -u'
alias gdc='git diff --cached'
alias gbrs='git branches'
alias gstap='git stash pop'

# DevInt Environment
alias devint='$HOME/rp/devint-environment/restart.sh -l 3 --proxies-enabled true -e dev --rules-enabled false --bots-config-env local --bots-config-branch develop'

# Pytest Aliases
alias pytall='pytest -nauto -k ""'
alias pytdbg='pytest -xsk ""'

# Virtualenvwrapper stuff
alias mkvirtualenv='mkvirtualenv --python=$VIRTUALENVWRAPPER_PYTHON -a `pwd` `pwd | rev | cut -f 1 -d "/" | rev`'
alias rmvirtualenv='deactivate && rmvirtualenv `pwd | rev | cut -f 1 -d "/" | rev`'
alias refvirtualenv='rmvirtualenv && mkvirtualenv'
alias localtestutils='pip uninstall crwtestutils -y && pip install -e $HOME/rp/crwtestutils'
alias localcommon='pip uninstall crwcommon -y && pip install -e $HOME/rp/crwcommon'
alias localebay='pip uninstall crwebaycommon -y && pip install -e $HOME/rp/crwebaycommon'
