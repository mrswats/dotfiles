[user]
    email = ferran@jovell.dev
    name = Ferran Jovell
    signingkey = 9855DA13410F68ED

[help]
	autocorrect = 1

[color]
    ui = true

[core]
    symlinks = false
    attributesFile = ~/.config/dotfiles/git/gitattributes
    editor = nvim
    excludesfile = ~/.config/dotfiles/git/gitignore
    hooksPath = ~/.config/dotfiles/git/hooks
    pager = ~/.config/dotfiles/bin/git-pager.sh

[gpg]
	program = gpg2

[commit]
	gpgsign = true

[format]
    pretty = oneline

[alias]
    a = "add"
    branch-name = "branch --show-current"
    branches = "for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes"
    ca = "commit --amend"
    can = "commit --amend --no-edit"
    conf = "config --global -e"
    cp = "cherry-pick"
    d = "diff"
    down = "pull --rebase --prune"
    enable = "!git push origin --delete $(git rev-parse --abbrev-ref HEAD) && git push"
    last = "lol --graph -1 --stat --show-signature"
    lob = "!git lol develop..$(git rev-parse --abbrev-ref HEAD)"
    lol = "log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
    lom = "!git lol main..$(git rev-parse --abbrev-ref HEAD)"
    los = "lol --stat"
    meta = "show --quiet --pretty=fuller"
    publish = "push -u origin HEAD -f"
    s = "status -s -b"
    save = "!git add --all && git commit -m 'SAVEPOINT'"
    ss = "s --show-stash"
    todo = "! git grep '# TODO'"
    wip = "commit -am 'WIP' --no-verify"

[checkout]
	workers = 4

[rebase]
    autostash = true

[pull]
    rebase = true
    autostash = true

[diff]
    tool = nvim
    colorMoved = default

[merge]
    tool = nvim

[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"

[difftool]
    prompt = false

[delta]
    syntax-theme = Nord

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

